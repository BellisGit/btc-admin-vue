	"type": "module",
	"scripts": {
		"dev": "vite --host",
		"build": "vite build",
		"build:prod": "vite build --mode production",
		"build:demo": "vite build --mode demo",
		"preview": "vite preview",
		"type-check": "node scripts/type-check.js strict",
		"type-check:loose": "node scripts/type-check.js loose",
		"type-check:validation": "node scripts/type-check.js validation",
		"type-check:watch": "node scripts/type-check.js watch",
		"type-check:report": "node scripts/type-check.js strict --report",
		"type-check:medium": "node scripts/type-check.js medium",
		"lint": "eslint . --fix",
		"format": "prettier --write src/",
		"clean": "rimraf dist",
		"serve": "vite preview --port 4173"
	},
