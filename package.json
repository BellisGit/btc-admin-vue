{
	"name": "btc-saas",
	"version": "1.0.0",
	"description": "BTC-SaaS - 拜里斯科技车间管理系统，基于Vue3的企业级后台管理系统",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vue-tsc && vite build",
		"build:prod": "vue-tsc && vite build --mode production",
		"build:demo": "vue-tsc && vite build --mode demo",
		"preview": "vite preview",
		"type-check": "vue-tsc --noEmit",
		"lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
		"format": "prettier --write src/",
		"clean": "rimraf dist",
		"serve": "vite preview --port 4173"
	},
	"dependencies": {
		"vue": "^3.4.0",
		"vue-router": "^4.2.5",
		"pinia": "^2.1.7",
		"element-plus": "^2.4.4",
		"@element-plus/icons-vue": "^2.3.1",
		"axios": "^1.6.2",
		"@vueuse/core": "^10.7.0",
		"mitt": "^3.0.1",
		"nprogress": "^0.2.0",
		"vue-i18n": "^9.9.1",
		"lodash-es": "^4.17.21",
		"dayjs": "^1.11.10",
		"echarts": "^5.4.3",
		"vue-echarts": "^6.6.1",
		"@btc-vue/crud": "workspace:*",
		"@btc-vue/vite-plugin": "workspace:*"
	},
	"devDependencies": {
		"@vitejs/plugin-vue": "^4.5.2",
		"@vitejs/plugin-vue-jsx": "^3.1.0",
		"vite": "^5.0.8",
		"vue-tsc": "^1.8.25",
		"typescript": "^5.3.3",
		"@types/node": "^20.10.5",
		"@types/lodash-es": "^4.17.12",
		"@types/nprogress": "^0.2.3",
		"@typescript-eslint/eslint-plugin": "^6.14.0",
		"@typescript-eslint/parser": "^6.14.0",
		"eslint": "^8.55.0",
		"eslint-plugin-vue": "^9.19.2",
		"@intlify/unplugin-vue-i18n": "^0.7.0",
		"vite-plugin-compression": "^0.5.1",
		"rollup-plugin-visualizer": "^5.9.2",
		"autoprefixer": "^10.4.16",
		"postcss": "^8.4.32",
		"tailwindcss": "^3.4.0",
		"prettier": "^3.1.1",
		"rimraf": "^5.0.5",
		"sass": "^1.69.7"
	},
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"packageManager": "pnpm@8.15.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/BellisGit/btc-admin-vue.git"
	},
	"keywords": [
		"vue3",
		"typescript",
		"vite",
		"element-plus",
		"pinia",
		"admin",
		"saas",
		"btc",
		"enterprise",
		"management-system"
	],
	"author": {
		"name": "BTC Team",
		"email": "contact@btc-admin.com"
	},
	"license": "MIT",
	"homepage": "https://btc-admin.com",
	"bugs": {
		"url": "https://github.com/BellisGit/btc-admin-vue/issues"
	}
}
